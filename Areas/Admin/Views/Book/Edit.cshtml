@model LibraryManagementSystem.ViewModels.AdminBookFormViewModel
@using LibraryManagementSystem.Models

@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>

<form asp-area="Admin" asp-controller="Book" asp-action="Edit"
      method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingPdfFilePath" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BookCategory"></label>
        <select asp-for="BookCategory"
                class="form-control"
                asp-items="Html.GetEnumSelectList<BookCategory>()">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="BookCategory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Author</label>
        <input name="AuthorName"
               class="form-control"
               value="@Model.AuthorName"
               required />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input name="CategoryName"
               class="form-control"
               value="@Model.CategoryName"
               required />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PublicationYear" class="form-label"></label>
        <input asp-for="PublicationYear" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="PdfFile" class="form-label">Replace PDF (optional)</label>
        <input asp-for="PdfFile" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-area="Admin" asp-controller="Book" asp-action="Index"
   class="btn btn-secondary">
   Cancel
    </a>
</form>