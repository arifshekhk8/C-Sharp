<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand"
           asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            Admin Panel
        </a>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link"
                       asp-area="Admin" asp-controller="Book" asp-action="Index">
                        Books
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                    asp-area="Admin"
                    asp-controller="Loan"
                    asp-action="Manage">
                        Manage Loans
                    </a>
                </li>
                

            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"
                    href="/?exitAdmin=true">
                        Exit Admin
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>

</body>
</html>